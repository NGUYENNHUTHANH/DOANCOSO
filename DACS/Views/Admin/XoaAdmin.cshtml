@model DACS.Models.ADMIN

@{
    ViewBag.Title = "XoaAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xác nhận thông tin admin cần xóa</h2>

<h3>Bạn có quyết định xóa admin này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tài khoản admin:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserAdmin)
        </dd>

        <dt>
            Mật khẩu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PassAdmin)
        </dd>

        <dt>
            Họ tên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hoten)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ ADMIN", "ListAdmin")
        </div>
    }
</div>

