@model DACS.Models.DONVILUHANH

@{
    ViewBag.Title = "SuaTH";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sửa thương hiệu</h2>

@using (Html.BeginForm("SuatH", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTH)

        <div class="form-group">
            @Html.LabelFor(model => model.MaTH, "Mã thương hiệu:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font:18px; padding:5px 0 0 5px">@Model.MaTH</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenDV, "Tên thương hiệu:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhDV, "Ảnh:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileUpload" />
                <img src="@Url.Content("~/Images/ThuongHieu/"+Model.AnhTH)" width="120px" /> (Ảnh hiện tại)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DienThoai, "Điện thoại:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("TRỞ VỀ THƯƠNG HIỆU", "Thuonghieu")
</div>

