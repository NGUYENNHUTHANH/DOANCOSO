@model DACS.Models.CHUDE

@{
    ViewBag.Title = "SuaCD";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sửa chủ đề</h2>

@using (Html.BeginForm("SuaCD", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaCD)

        <div class="form-group">
            @Html.LabelFor(model => model.MaCD, "Mã chủ đề:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font:18px; padding:5px 0 0 5px">@Model.MaCD</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenChuDe, "Tên chủ đề:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhCD, "Ảnh:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileUpload" />
                <img src="@Url.Content("~/Images/ChuDe/"+Model.AnhCD)" width="120px" /> (Ảnh hiện tại)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaPL, "Phân loại:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaPL")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("TRỞ VỀ CHỦ ĐỀ", "Chude")
</div>

