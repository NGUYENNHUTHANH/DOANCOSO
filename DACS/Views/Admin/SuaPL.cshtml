@model DACS.Models.PHANLOAI

@{
    ViewBag.Title = "SuaPL";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sửa phân loại</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaPL)

        <div class="form-group">
            @Html.LabelFor(model => model.MaPL, "Mã phân loại:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font:18px; padding:5px 0 0 5px">@Model.MaPL</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenPL, "Tên phân loại:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenPL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("TRỞ VỀ PHÂN LOẠI", "Phanloai")
</div>

