@model DACS.Models.PHANLOAI

@{
    ViewBag.Title = "XoaPL";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xác nhận thông tin phân loại cần xóa</h2>

<h3>Bạn có quyết định xóa phân loại này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên phân loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPL)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ PHÂN LOẠI", "Phanloai")
        </div>
    }
</div>

