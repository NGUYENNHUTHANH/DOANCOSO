@using DACS.Models
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<DACS.Models.SANPHAM>

@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>@ViewBag.Thongbao</div>

<div>
    @foreach (var sanpham in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href=@Url.Action("Details","Guest", new {id=sanpham.MaSP})>
                    <img src="~/img/SanPham/@sanpham.Anhbia" width="100" height="100">
                    <div class="caption">
                        <h4 style="text-align:justify;"> @sanpham.TenSP </h4>
                        <h4 class="pull-right" style="color:red;"> @sanpham.Gia VNĐ</h4>

                        <p>@sanpham.Mota</p>
                    </div>
                    <div class="ratings">
                        <div class="product-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o empty"></i>
                        </div>

                    </div>

                    <div class="product-btns">
                        <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                        <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                        <button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i>ĐẶT TOUR</button>
                    </div>
                </a>
            </div>
        </div>



    }
</div>
<div style="text-align:center">
    @* Tạo liên kết các trang *@
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("KetQuaTimKiem", new { page = page, @sTuKhoa=ViewBag.TuKhoa }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
</div>

<script>
    $('.text').html(function (i, html) {
        var chars = $.trim(html).split("");

        return '<span>' + chars.join('</span><span>') + '</span>';
    });
</script>

